<?xml version="1.0" encoding="utf-8"?>
<com.hendraanggrian.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomActivity1">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="32dp"
        app:fabSize="normal"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="32dp"
        app:fabSize="normal"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        app:fabSize="normal"/>

    <android.support.v7.widget.CardView
        android:id="@+id/maskTo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:foreground="?selectableItemBackground"
        android:visibility="invisible"
        app:cardBackgroundColor="?colorAccent"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/maskSimple"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="center"
        android:foreground="?selectableItemBackground"
        android:visibility="invisible"
        app:cardBackgroundColor="?colorAccent"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"/>
</com.hendraanggrian.widget.RevealFrameLayout>