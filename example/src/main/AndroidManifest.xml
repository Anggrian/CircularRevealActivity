<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reveallayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_rounded"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.reveallayout.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.reveallayout.SimpleActivity"/>
        <activity android:name="com.example.reveallayout.CustomActivity1"/>
        <activity
            android:name="com.example.reveallayout.CustomActivity2"
            android:theme="@style/CircularRevealTheme"/>
    </application>
</manifest>